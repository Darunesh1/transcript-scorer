{
  "criteria": [
    {
      "name": "Content & Structure",
      "total_weight": 40,
      "metrics": [
        {
          "metric_name": "Salutation Level",
          "weight": 5,
          "description": "Based on the type of salutation provided",
          "scoring_rules": [
            {"level": "No Salutation", "keywords": [], "score": 0},
            {"level": "Normal", "keywords": ["Hi", "Hello"], "score": 2},
            {"level": "Good", "keywords": ["Good Morning", "Good Afternoon", "Good Evening", "Good Day", "Hello everyone"], "score": 4},
            {"level": "Excellent", "keywords": ["excited to introduce", "Feeling great"], "score": 5}
          ]
        },
        {
          "metric_name": "Keyword Presence",
          "weight": 30,
          "description": "Check for mandatory and optional keywords",
          "must_have_keywords": {
            "keywords": ["Name", "Age", "School", "Class", "Family", "Hobbies", "Interest", "free time"],
            "score_per_keyword": 4,
            "max_score": 20
          },
          "good_to_have_keywords": {
            "keywords": ["About Family", "from", "parents", "Ambition", "Goal", "Dream", "fun fact", "unique", "Strengths", "Achievements"],
            "score_per_keyword": 2,
            "max_score": 10
          }
        },
        {
          "metric_name": "Flow",
          "weight": 5,
          "description": "Check if introduction follows proper order",
          "expected_order": [
            "Salutation",
            "Basic details (Name, Age, Class/school, Place)",
            "Additional Details (good to have)",
            "Closing"
          ],
          "scoring_rules": [
            {"condition": "Order followed", "score": 5},
            {"condition": "Order not followed", "score": 0}
          ]
        }
      ]
    },
    {
      "name": "Speech Rate",
      "total_weight": 10,
      "metrics": [
        {
          "metric_name": "Words Per Minute (WPM)",
          "weight": 10,
          "description": "Calculate speech rate and score accordingly",
          "formula": "word_count / (duration_seconds / 60)",
          "requires_duration": true,
          "scoring_ranges": [
            {"label": "Too Fast", "min": 161, "max": 999, "score": 2},
            {"label": "Fast", "min": 141, "max": 160, "score": 6},
            {"label": "Ideal", "min": 111, "max": 140, "score": 10},
            {"label": "Slow", "min": 81, "max": 110, "score": 6},
            {"label": "Too Slow", "min": 0, "max": 80, "score": 2}
          ]
        }
      ]
    },
    {
      "name": "Language & Grammar",
      "total_weight": 20,
      "metrics": [
        {
          "metric_name": "Grammar Score",
          "weight": 10,
          "description": "Grammar errors using Language Tool",
          "formula": "1 - min(errors_per_100_words / 10, 1)",
          "tool": "Python LanguageTool library",
          "scoring_ranges": [
            {"min": 0.9, "max": 1.0, "score": 10},
            {"min": 0.7, "max": 0.89, "score": 8},
            {"min": 0.5, "max": 0.69, "score": 6},
            {"min": 0.3, "max": 0.49, "score": 4},
            {"min": 0, "max": 0.29, "score": 2}
          ]
        },
        {
          "metric_name": "Vocabulary Richness (TTR)",
          "weight": 10,
          "description": "Type-Token Ratio",
          "formula": "distinct_words / total_words",
          "scoring_ranges": [
            {"min": 0.9, "max": 1.0, "score": 10},
            {"min": 0.7, "max": 0.89, "score": 8},
            {"min": 0.5, "max": 0.69, "score": 6},
            {"min": 0.3, "max": 0.49, "score": 4},
            {"min": 0, "max": 0.29, "score": 2}
          ]
        }
      ]
    },
    {
      "name": "Clarity",
      "total_weight": 15,
      "metrics": [
        {
          "metric_name": "Filler Word Rate",
          "weight": 15,
          "description": "Rate of filler words in speech",
          "filler_words": ["um", "uh", "like", "you know", "so", "actually", "basically", "right", "i mean", "well", "kinda", "sort of", "okay", "hmm", "ah"],
          "formula": "(filler_word_count / total_words) * 100",
          "scoring_ranges": [
            {"min": 0, "max": 3, "score": 15},
            {"min": 4, "max": 6, "score": 12},
            {"min": 7, "max": 9, "score": 9},
            {"min": 10, "max": 12, "score": 6},
            {"min": 13, "max": 999, "score": 3}
          ]
        }
      ]
    },
    {
      "name": "Engagement",
      "total_weight": 15,
      "metrics": [
        {
          "metric_name": "Sentiment/Positivity",
          "weight": 15,
          "description": "Positive sentiment using VADER",
          "tool": "VADER sentiment analysis",
          "formula": "positive_probability (0 to 1)",
          "scoring_ranges": [
            {"min": 0.9, "max": 1.0, "score": 15},
            {"min": 0.7, "max": 0.89, "score": 12},
            {"min": 0.5, "max": 0.69, "score": 9},
            {"min": 0.3, "max": 0.49, "score": 6},
            {"min": 0, "max": 0.29, "score": 3}
          ]
        }
      ]
    }
  ],
  "total_possible_score": 100,
  "metadata": {
    "topic": "Self Introduction",
    "source": "Nirmaan AI Intern Case Study",
    "version": "1.0"
  }
}

